find / -mount -type f -print0 2>/dev/null | xargs -0 du 2>/dev/null | grep -v "virtfs" |sort -n | tail -40 | cut -f2 | xargs -I{} du -sh 2>/dev/null {} | uniq; printf '+%.0s' {1..100}; echo; find / -mount -type d -print0 2>/dev/null | xargs -0 du 2>/dev/null | grep -v "virtfs" | sort -n | tail -40 | cut -f2 | xargs -I{} du -sh 2>/dev/null {} | uniq; printf '+%.0s' {1..100}; echo; du -sh /var/cpanel/user_notifications && du -sh /backup/cpbackup/*/dirs/_var_cpanel/user_notifications

1 - journalctl --disk-usage
2 - journalctl --vacuum-size=1
